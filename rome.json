{
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"recommended": true
			},
			"style": {
				"recommended": true
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"files": {
		"ignore": ["node_modules", "coverage", "cache", "dist", "packages/**/**/*.d.ts"]
	}
}
