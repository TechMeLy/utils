{
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"recommended": true
			},
			"style": {
				"recommended": true
			},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		},
		"ignore": ["node_modules", "packages/**/node_modules", "packages/ui/dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"ignore": ["node_modules", "packages/**/node_modules", "packages/ui/dist"]
	}
}
