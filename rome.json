{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "recommended": true
      },
      "style": {
        "recommended": true
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    },
    "ignore": ["node_modules", "apps/**/node_modules", "libs/**/node_modules"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 100
  }
}
