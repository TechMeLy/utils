{
  "name": "@techmely/open-sources",
  "description": "Techmely Open Sources Communities Packages",
  "author": "Harry Tran <nhattq.coding@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/techmely/techmely.git"
  },
  "engines": {
    "node": ">=18.6.0",
    "npm": ">=8.11.0",
    "yarn": ">=3.1.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "bundlesize": "bundlesize",
    "build:deps": "nx run-many --target=build --all",
    "build:types": "nx build @techmely/types",
    "build:vite-plugin": "nx build @techmely/vite-plugin-runtime-env",
    "build:utils": "nx build @techmely/utils",
    "build:ui": "nx build @techmely/ui",
    "build:hooks": "nx build @techmely/hooks",
    "lint:check": "rome format packages/**/src/**/*.ts",
    "lint:format": "rome format packages/**/src/**/*.ts --write",
    "clean": "yarn workspaces foreach -pti run clean",
    "clean:modules": "npx rimraf node_modules packages/**/node_modules",
    "test:unit": "vitest --passWithNoTests",
    "test:unit:run": "vitest run --passWithNoTests",
    "test:unit:coverage": "vitest --coverage",
    "publish:stable": "yarn bump:stable && yarn clean && yarn build:deps && yarn workspaces foreach -pv --exclude @techmely/open-sources run publish",
    "publish:next": "yarn bump:next && yarn clean && yarn build:deps && yarn workspaces foreach -pv --exclude @techmely/open-sources run publish --tag next",
    "bump:stable": "yarn version apply --all",
    "bump:next": "yarn version apply --all --prerelease",
    "bump:check": "yarn version check",
    "type-check": "yarn workspaces foreach -pvti run type-check"
  },
  "packageManager": "yarn@3.2.4",
  "devDependencies": {
    "@ls-lint/ls-lint": "1.11.2",
    "@types/node": "18.11.3",
    "@yarnpkg/sdks": "^3.0.0-rc.26",
    "bundlesize": "0.18.1",
    "cross-env": "7.0.3",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "happy-dom": "7.6.0",
    "jscpd": "3.5.0",
    "kolorist": "1.6.0",
    "lodash-es": "4.17.21",
    "nx": "^15.0.1",
    "rimraf": "3.0.2",
    "rome": "next",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "4.8.4",
    "vite": "^3.1.8",
    "vitest": "^0.24.3",
    "zx": "7.1.1"
  },
  "funding": [
    {
      "type": "ko-fi",
      "url": "https://ko-fi.com/harrytran998"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/harrytran998"
    }
  ]
}
