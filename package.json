{
  "name": "@techmely/open-sources",
  "description": "Techmely Open Sources Communities Packages",
  "author": "Harry Tran <nhattq.coding@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/techmely/techmely.git"
  },
  "engines": {
    "node": ">=16.13.0",
    "npm": ">=8.1.0",
    "pnpm": ">=6"
  },
  "workspaces": [
    "packages/*",
    "packages/vite-plugin/*",
    "packages/ui/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "bundlesize": "bundlesize",
    "build:deps": "turbo run build --parallel",
    "build:types": "turbo run build --scope=@techmely/types --no-deps",
    "build:vite-plugin": "turbo run build --scope=@techmely/vite-plugin-runtime-env --no-deps",
    "build:test-utils": "turbo run build --scope=@techmely/test-utils --no-deps",
    "build:utils": "turbo run build --scope=@techmely/utils --no-deps",
    "build:ui": "turbo run build --scope=@techmely/ui --no-deps",
    "build:hooks": "turbo run build --scope=@techmely/hooks --no-deps",
    "build:build-configs": "turbo run build --scope=@techmely/build-configs --no-deps",
    "lint:format": "rome format **/*.ts",
    "lint:check": "rome check **/*.ts",
    "version-packages": "changeset version",
    "release": "pnpm run build:deps && changeset publish",
    "clean": "pnpm -r run clean",
    "clean:modules": "npx rimraf node_modules packages/**/node_modules",
    "test:unit": "vitest --passWithNoTests",
    "test:unit:run": "vitest run --passWithNoTests",
    "test:unit:coverage": "vitest --coverage",
    "changelog:gen": "ts-node scripts/generateChangelog.ts",
    "changelog:write": "ts-node scripts/writeChangelog.ts",
    "changelog:commit": "git add CHANGELOG.md && git commit -am 'docs: add changelog' && git push"
  },
  "packageManager": "pnpm@6.32.11",
  "devDependencies": {
    "@changesets/changelog-github": "0.4.5",
    "@changesets/cli": "2.23.1",
    "@ls-lint/ls-lint": "1.11.2",
    "@swc/core": "^1.2.211",
    "@swc/helpers": "^0.4.3",
    "@types/node": "18.0.3",
    "bumpp": "8.2.1",
    "bundlesize": "0.18.1",
    "cross-env": "7.0.3",
    "happy-dom": "6.0.2",
    "jscpd": "3.4.5",
    "kolorist": "1.5.1",
    "lodash-es": "4.17.21",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "rome": "0.7.0-next",
    "turbo": "1.3.1",
    "typescript": "4.7.4",
    "vite": "^2.9.14",
    "vitest": "^0.18.0",
    "ts-node": "^10.8.2",
    "zx": "7.0.7"
  },
  "funding": [
    {
      "type": "ko-fi",
      "url": "https://ko-fi.com/harrytran998"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/harrytran998"
    }
  ]
}
