{
	"name": "@techmely/monorepo",
	"description": "Techmely Open Sources Communities Packages",
	"author": "Harry Tran <nhattq.coding@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/techmely/techmely.git"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"postinstall": "make git-hooks",
		"build:deps": "nx run-many --target=build --all",
		"build:types": "nx build @techmely/types",
		"build:utils": "nx build @techmely/utils",
		"build:hooks": "nx build @techmely/hooks",
		"clean": "nx run-many --target=clean",
		"test:unit": "vitest --passWithNoTests",
		"test:unit:run": "vitest run --passWithNoTests",
		"test:unit:coverage": "vitest --coverage",
		"publish": "changeset publish",
		"lint:format": "rome format packages/**/src/**/*.ts --write",
		"lint:check": "rome format packages/**/src/**/*.ts",
		"lint:types": "nx run-many --target=type-check",
		"lint:bundlesize": "bundlesize",
		"lint:duplicate": "jscpd"
	},
	"packageManager": "yarn@3.5.0",
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.1",
		"@ls-lint/ls-lint": "2.0.0",
		"@storybook/addon-essentials": "7.0.22",
		"@storybook/addon-interactions": "7.0.22",
		"@storybook/addon-links": "7.0.22",
		"@storybook/blocks": "7.0.22",
		"@storybook/html": "7.0.22",
		"@storybook/html-vite": "7.0.22",
		"@storybook/testing-library": "0.2.0",
		"@testing-library/react": "14.0.0",
		"@types/node": "20.3.1",
		"@yarnpkg/sdks": "3.0.0-rc.45",
		"bundlesize": "0.18.1",
		"cross-env": "7.0.3",
		"fast-glob": "^3.2.12",
		"fs-extra": "^11.1.1",
		"happy-dom": "9.20.3",
		"jscpd": "3.5.9",
		"kolorist": "1.8.0",
		"nx": "^16.3.2",
		"prettier-plugin-svelte": "^2.10.1",
		"rimraf": "5.0.1",
		"rome": "^12.1.3",
		"storybook": "7.0.22",
		"ts-node": "^10.9.1",
		"tslib": "^2.5.3",
		"typescript": "5.1.3",
		"unocss": "0.53.1",
		"vite": "^4.3.9",
		"vitest": "^0.32.2",
		"zx": "7.2.2"
	},
	"engines": {
		"node": ">=18.6.0",
		"npm": ">=8.11.0"
	},
	"volta": {
		"node": "18.6.0",
		"yarn": "3.4.1"
	},
	"jscpd": {
		"threshold": 0.1,
		"pattern": "packages/**/src/**/*.ts",
		"reporters": [
			"html",
			"console"
		],
		"ignore": [
			"**/__snapshots__/**",
			"packages/**/test/**/*.ts"
		],
		"absolute": true,
		"gitignore": true
	},
	"funding": [
		{
			"type": "ko-fi",
			"url": "https://ko-fi.com/harrytran998"
		},
		{
			"type": "patreon",
			"url": "https://www.patreon.com/harrytran998"
		}
	]
}
