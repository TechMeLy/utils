{
  "name": "@techmely/open-sources",
  "description": "Techmely Open Sources Communities Packages",
  "author": "Harry Tran <nhattq.coding@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/techmely/techmely.git"
  },
  "engines": {
    "node": ">=16.13.0",
    "npm": ">=8.1.0",
    "pnpm": ">=6"
  },
  "workspaces": [
    "packages/*",
    "packages/vite-plugin/*",
    "packages/ui/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "make git-hook",
    "bundlesize": "bundlesize",
    "build:deps": "pnpm -r --parallel --filter {packages} run build",
    "build:types": "turbo run build --scope=@techmely/types --no-deps",
    "build:vite-plugin": "turbo run build --scope=@techmely/vite-plugin-runtime-env --no-deps",
    "build:test-utils": "turbo run build --scope=@techmely/test-utils --no-deps",
    "build:utils": "turbo run build --scope=@techmely/utils --no-deps",
    "build:ui": "turbo run build --scope=@techmely/ui --no-deps",
    "build:hooks": "turbo run build --scope=@techmely/hooks --no-deps",
    "build:build-configs": "turbo run build --scope=@techmely/build-configs --no-deps",
    "version-packages": "changeset version",
    "release": "pnpm run build:deps && changeset publish",
    "clean": "pnpm -r run clean",
    "clean:modules": "npx rimraf node_modules packages/**/node_modules",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "prettier": "prettier --write \"**/*.{js,ts,tsx,md}\""
  },
  "packageManager": "pnpm@6.32.11",
  "devDependencies": {
    "@changesets/changelog-github": "0.4.4",
    "@changesets/cli": "2.22.0",
    "@ls-lint/ls-lint": "1.11.0",
    "@swc/core": "1.2.172",
    "@swc/helpers": "0.3.8",
    "@types/node": "17.0.38",
    "bumpp": "7.1.1",
    "bundlesize": "0.18.1",
    "cross-env": "7.0.3",
    "jscpd": "3.4.5",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "turbo": "1.2.5",
    "typescript": "4.6.3",
    "vite": "2.9.6",
    "vitest": "0.10.0"
  },
  "funding": [
    {
      "type": "ko-fi",
      "url": "https://ko-fi.com/harrytran998"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/harrytran998"
    }
  ]
}
