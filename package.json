{
	"name": "@techmely/monorepo",
	"description": "Techmely Open Sources Communities Packages",
	"author": "Harry Tran <nhattq.coding@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/techmely/techmely.git"
	},
	"workspaces": ["packages/*"],
	"scripts": {
		"preinstall": "npx only-allow yarn",
		"postinstall": "make git-hooks",
		"build": "nx run-many -t build --parallel 5",
		"clean": "nx run-many -t clean",
		"test.unit": "vitest --passWithNoTests",
		"test.unit.run": "vitest run --passWithNoTests",
		"test.unit.coverage": "vitest --coverage",
		"publish": "nx run-many -t publish",
		"lint.format": "rome format packages/**/src/**/*.ts --write",
		"lint.check": "rome format packages/**/src/**/*.ts",
		"lint.types": "nx run-many --target=type-check",
		"lint.bundlesize": "bundlesize",
		"lint.duplicate": "jscpd"
	},
	"packageManager": "yarn@3.6.1",
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.2",
		"@ls-lint/ls-lint": "2.0.1",
		"@types/node": "20.4.8",
		"bundlesize": "0.18.1",
		"cross-env": "7.0.3",
		"fast-glob": "^3.3.1",
		"fs-extra": "^11.1.1",
		"happy-dom": "10.8.0",
		"jscpd": "3.5.9",
		"kolorist": "1.8.0",
		"nx": "^16.6.0",
		"rimraf": "5.0.1",
		"rome": "^12.1.3",
		"ts-node": "^10.9.1",
		"tslib": "^2.6.1",
		"typescript": "5.1.6",
		"unbuild": "1.2.1",
		"vite": "^4.4.8",
		"vitest": "^0.34.1",
		"zx": "7.2.3"
	},
	"engines": {
		"node": ">=18.6.0",
		"npm": ">=8.11.0"
	},
	"volta": {
		"node": "18.6.0",
		"yarn": "3.6.1"
	},
	"jscpd": {
		"threshold": 0.1,
		"pattern": "packages/**/src/**/*.ts",
		"reporters": ["html", "console"],
		"ignore": ["**/__snapshots__/**", "packages/**/test/**/*.ts"],
		"absolute": true,
		"gitignore": true
	},
	"funding": [
		{
			"type": "ko-fi",
			"url": "https://ko-fi.com/harrytran998"
		},
		{
			"type": "patreon",
			"url": "https://www.patreon.com/harrytran998"
		}
	]
}
