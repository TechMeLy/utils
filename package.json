{
  "name": "@techmely/monorepo",
  "description": "Techmely Open Sources Communities Packages",
  "author": "Harry Tran <nhattq.coding@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/techmely/techmely.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "postinstall": "make git-hooks",
    "build:deps": "nx run-many --target=build --all",
    "build:types": "nx build @techmely/types",
    "build:utils": "nx build @techmely/utils",
    "build:hooks": "nx build @techmely/hooks",
    "clean": "nx run-many --target=clean",
    "test:unit": "vitest --passWithNoTests",
    "test:unit:run": "vitest run --passWithNoTests",
    "test:unit:coverage": "vitest --coverage",
    "publish:stable": "yarn bump:stable && yarn clean && yarn build:deps && nx run-many --target=publish",
    "bump:stable": "yarn version apply --all",
    "bump:check": "yarn version check",
    "lint:format": "rome format packages/**/src/**/*.ts --write",
    "lint:check": "rome format packages/**/src/**/*.ts",
    "lint:types": "nx run-many --target=type-check",
    "lint:bundlesize": "bundlesize",
    "lint:duplicate": "jscpd"
  },
  "packageManager": "yarn@3.4.1",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@ls-lint/ls-lint": "1.11.2",
    "@testing-library/react": "13.4.0",
    "@types/node": "18.13.0",
    "@vitejs/plugin-react": "3.1.0",
    "@yarnpkg/sdks": "^3.0.0-rc.34",
    "bundlesize": "0.18.1",
    "cross-env": "7.0.3",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.0",
    "happy-dom": "8.2.6",
    "jscpd": "3.5.3",
    "kolorist": "1.7.0",
    "nx": "^15.6.3",
    "prettier-plugin-svelte": "^2.9.0",
    "rimraf": "4.1.2",
    "rome": "^11.0.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "4.9.5",
    "vite": "^4.1.1",
    "vitest": "^0.28.4",
    "zx": "7.1.1"
  },
  "engines": {
    "node": ">=18.6.0",
    "npm": ">=8.11.0"
  },
  "volta": {
    "node": "18.6.0",
    "yarn": "3.4.1"
  },
  "jscpd": {
    "threshold": 0.1,
    "pattern": "packages/**/src/**/*.ts",
    "reporters": [
      "html",
      "console"
    ],
    "ignore": [
      "**/__snapshots__/**",
      "packages/**/test/**/*.ts"
    ],
    "absolute": true,
    "gitignore": true
  },
  "funding": [
    {
      "type": "ko-fi",
      "url": "https://ko-fi.com/harrytran998"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/harrytran998"
    }
  ]
}
