{
  "name": "@techmely/utils",
  "version": "0.0.1",
  "description": "Collection of helpful JavaScript / TypeScript utils",
  "author": "Harry Tran <nhattq.coding@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TechMeLy/utils.git"
  },
  "engines": {
    "node": ">=14.15.4",
    "npm": ">= 7.0.15"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "typings"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "make git-hook",
    "dev": "tsup --watch",
    "build": "cross-env NODE_ENV=production tsup --dts",
    "lint:files": "ls-lint",
    "lint:eslint": "eslint --cache --ext .ts . --ignore-path .gitignore",
    "lint:eslint:quiet": "eslint --cache --ext .ts . --ignore-path .gitignore --quiet",
    "lint:eslint:fix": "eslint --cache --ext .ts . --ignore-path .gitignore --fix",
    "test:jest": "TZ=Asia/Ho_Chi_Minh jest --passWithNoTests",
    "release": "npx bumpp --commit --push --tag && npm publish",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "dayjs": "^1.10.6"
  },
  "peerDependenciesMeta": {
    "dayjs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.10.0",
    "@sucrase/jest-plugin": "^2.1.1",
    "@techmely/eslint-config-ts": "^0.0.5",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.4",
    "bundlesize": "^0.18.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.6",
    "eslint": "^7.32.0",
    "jest": "^27.1.0",
    "tsup": "^4.14.0",
    "typescript": "^4.4.2"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": [
    {
      "type": "ko-fi",
      "url": "https://ko-fi.com/harrytran998"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/harrytran998"
    }
  ]
}
